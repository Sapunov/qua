{
  "settings": {
    "analysis": {
      "filter": {
        "russian_stop": {
          "type": "stop",
          "stopwords": "_russian_"
        },
        "russian_stemmer": {
          "type": "stemmer",
          "language": "russian"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "custom_word_delimiter": {
          "type": "word_delimiter",
          "generate_word_parts": true,
          "generate_number_parts": true,
          "protected_words_path": "qua_protected_words.txt"
        },
        "synonym": {
          "type": "synonym",
          "synonyms_path": "qua_synonyms.txt"
        }
      },
      "analyzer": {
        "app_search_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "custom_word_delimiter",
            "russian_stop",
            "english_stop",
            "english_stemmer",
            "russian_stemmer",
            "synonym",
            "english_stemmer",
            "russian_stemmer"
          ]
        },
        "spelling_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "custom_word_delimiter"
          ]
        }
      }
    }
  },
  "mappings": {
    "main": {
      "properties": {
        "text": {
          "type": "text",
          "analyzer": "spelling_analyzer",
          "search_analyzer": "app_search_analyzer"
        }
      },
      "_source": {
        "enabled": false
      }
    }
  }
}
